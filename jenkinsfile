#!/usr/bin/env groovy
pipeline {
    agent {
        node{
        label 'Servidor109'
        }
    }
    environment {
        NAME_PROJECT = 'digitalse-cbm-back'
        FOLDER_PROJECT = 'back'
        BRANCH = 'main'
