            //slackSend color: "danger", message: "${currentBuild.fullDisplayName} - ${env.JOB_NAME} #${env.BUILD_NUMBER} Erro ao Buildar Projeto"
            discordSend link: env.BUILD_URL, description: "DigitalSE - ..... :shit:", webhookURL: WEBHOOK
